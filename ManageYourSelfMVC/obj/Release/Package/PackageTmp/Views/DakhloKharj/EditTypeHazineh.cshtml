@model ManageYourSelfMVC.Models.DomainModels.TypeHazineh
<div class="table-responsive" Name="EditTypeHazineh">
    <table class="table" TypeHazinehId="@Model.TypeHazinehId">
        <tr>
            <td>عنوان</td>
            <td><input name="name" type="text" value="@Model.name" /></td>
        </tr>
        <tr>
            @if (Model.DaramadOrKharj == false)
            {
                <td><input type="radio" name="TypeHazineh" value="true" />دریافت</td>
                <td><input type="radio" name="TypeHazineh" value="false" checked />پرداخت</td>
            }
            else
            {
                <td><input type="radio" name="TypeHazineh" value="true" checked />دریافت</td>
                <td><input type="radio" name="TypeHazineh" value="false" />پرداخت</td>
            }
        </tr>
    </table>
</div>



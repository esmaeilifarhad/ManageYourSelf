@model ManageYourSelfMVC.ViewModels.AccountViewModel
@{
    Layout = "~/Views/Shared/_LayoutBizPage.cshtml";
}

<style>
    .button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }

    .button1 {
        border-radius: 2px;
    }

    .button2 {
        border-radius: 4px;
    }

    .button3 {
        border-radius: 8px;
    }

    .button4 {
        border-radius: 12px;
    }

    .button5 {
        border-radius: 50%;
    }
</style>


    <br /><br /><br />
    <p style="font-family:'Morvarid';"><span>در صورتی که نام کاربری و پسورد ندارید ثبت نام نمایید</span> | 
    <span><button onclick="location.href='@Url.Action("Register", "Register")'" class="button button5">ثبت نام</button>@*<a href="@Url.Action("Register","Register")">ثبت نام</a>*@</span></p>
    <hr />
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @ViewBag.Error
        <table cellpadding="2" , cellspacing="2">
            <tr>
                <td>نام کاربری</td>
                <td>@Html.TextBoxFor(model => model.Account.UserName)</td>
            </tr>
            <tr>
                <td>پسورد</td>
                <td>@Html.PasswordFor(model => model.Account.Password)</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td><input type="submit" value="Login"></td>
            </tr>
        </table>
    }
   

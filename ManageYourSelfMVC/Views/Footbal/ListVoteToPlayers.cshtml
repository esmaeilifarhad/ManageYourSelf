@model  ManageYourSelfMVC.ViewModels.PlayerScoreVM
<!--نمایش رای هر بازیکن-->
<div  class="table-responsive" style="font-family:BNazanin">
    <table class="table table-dark table-striped" style="direction: ltr; text-align: center;">
        <thead>
            <tr>

                @foreach (System.Data.DataColumn column in Model.VoteToPlayersPIVOT.Columns)
                {
                    <th>@column.ColumnName</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow item in Model.VoteToPlayersPIVOT.Rows)
            {
                <tr>
                    @for (int i = 0; i < Model.VoteToPlayersPIVOT.Columns.Count; i++)
                    {
                        <td>@item[i].ToString()</td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

